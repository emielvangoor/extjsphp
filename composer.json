{
    "name": "bonsa/extphp",
    "description": "Create ExtJS interfaces from PHP",
    "type": "project",
    "keywords": ["php", "extjs", "sencha"],
    "authors": [
        {
            "name": "Emiel van Goor",
            "email": "emielvangoor@me.com"
        }
    ],
    "license": "MIT",

    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "partkeepr/extjs6": "dev-master"
    },

    "extra": {
        "installer-paths": {
            "examples/ext": ["partkeepr/extjs6"]
        }
    },

    "autoload": {
        "psr-4": {
            "Bonsa\\Extphp\\":  "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    }
}
